{{#x-card
  onsubmit=attrs.onsubmit
  title='Login to Peepchat'
  buttonText='Login'
  buttonDisabled=validations.messages.length}}

  <div class="row">
    {{x-input
      value=model.email
      errors=(v-get model 'email' 'messages')
      classNames='col s12'
      type='email'
      label='Username'}}
  </div>
  <div class="row">
    {{x-input
      value=model.password
      errors=(v-get model 'password' 'messages')
      classNames='col s12'
      type='password'
      label='Password'}}
  </div>
{{/x-card}}
